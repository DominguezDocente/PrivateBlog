@model PrivateBlogRoleDTO
@{
    ViewData["Title"] = "Editar Rol";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
            <li class="breadcrumb-item active">Editar Rol</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">

        <div class="card-body">
            <h3 class="card-title">Editar Rol</h3>

            <form class="row g-3" asp-action="Edit" method="POST" id="frmEdit">

                <input type="Hidden" asp-for="Id" />

                @await Html.PartialAsync("_Role", Model)

            </form>


        </div>
    </div>

    @await Html.PartialAsync("_Sections", Model)

    @await Html.PartialAsync("_Permissions", Model)

    <div class="text-center">
        <button type="submit" class="btn btn-primary" form="frmEdit" id="btnEdit">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function() {

            $('#btnEdit').click(function(event) {

                const permissions = $('.permission:checked');

                let permissionIds = [];

                permissions.each(function() {

                    const permissionId = $(this).data('permission-id');
                    permissionIds.push(permissionId);
                });

                const sections = $('.section:checked');

                let sectionIds = [];

                sections.each(function() {

                    const sectionId = $(this).data('section-id');
                    sectionIds.push(sectionId);
                });

                $('#permissionIds').val( JSON.stringify(permissionIds));
                $('#sectionIds').val( JSON.stringify(sectionIds));
            });

        });

    </script>
}
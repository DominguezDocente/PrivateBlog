@using PrivateBlog.Web.Data.Entities
@inject PrivateBlog.Web.Services.Abtractions.IUsersService _usersService

@{
    User? user;

    try
    {
        user = await _usersService.GetUserByEmailasync(User.Identity.Name);
    }
    catch
    {
        user = null;
    }
}

<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
        <a href="index.html" class="logo d-flex align-items-center">
            <img src="~/assets/img/logo.png" alt="">
            <span class="d-none d-lg-block">NiceAdmin</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">


            <li class="nav-item dropdown pe-3">

                @if (user is not null)
                {     
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@user.FirstName.Substring(0, 1) . @user.LastName</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@user.FullName</h6>
                            <span>@user.PrivateBlogRole.Name</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="UpdateUser">
                                <i class="bi bi-person"></i>
                                <span>Mi Perfil</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-action="Logout" asp-controller="Account">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar sesión</span>
                            </a>
                        </li>

                    </ul>
                }
                else
                {
                    <a class="nav-link dropdown-toggle" asp-action="Login" asp-controller="Account">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Iniciar sesión</span>
                    </a>
                }

            </li>

        </ul>
    </nav>

</header>
@model BlogDTO
@{
    ViewData["Title"] = "Nuevo blog";
}

@section Styles{
    <link href="~/lib/summernote/summernote-bs5.css" rel="stylesheet" />
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Blogs</a></li>
            <li class="breadcrumb-item active">Nuevo blog</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header">
            <h3 class="m-0 font-weight-bold text-primary">Nuevo blog</h3>
        </div>

        <div class="card-body mt-3">

            <form asp-action="Create" method="POST" class="row g-3">
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Name)">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <select asp-for="SectionId" asp-items="Model.Sections" class="form-control"></select>
                        <label asp-for="SectionId"></label>
                        <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Content)" rows="40"> </textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>

            </form>

        </div>
    </div>
</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/summernote/summernote.js"></script>
    <script src="~/lib/summernote/lang/summernote-es-ES.js"></script>

    <script>

        $(document).ready(function(){

            $('#Content').summernote({

                lang: 'es-ES',
                placeholder: 'Cree el blog',
            });

        });

    </script>
}





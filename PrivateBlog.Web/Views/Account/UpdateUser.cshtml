@model AccountUserDTO

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Editar Usuario</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">

        <div class="card-body">
            <h5 class="card-title text.primary">Editar Usuario</h5>

            <form asp-action="UpdateUser" method="POST" class="row g-3" enctype='multipart/form-data'>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Email" />


                <div class="row">

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input value="@Model.Email" class="form-control" readonly>
                            <label asp-for="Email"></label>
                        </div>
                    </div>


                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="Document" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Document)" />
                            <label asp-for="Document"></label>
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="Nombres">
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Apellidos">
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Teléfono">
                            <label asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>

    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
